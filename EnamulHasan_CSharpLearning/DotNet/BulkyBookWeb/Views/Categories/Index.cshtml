@model IEnumerable<BulkyBookWeb.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1 class="text-center">Categories</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-success btn-lg">Create New</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.DisplayOrder)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedDateTime)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.DisplayOrder)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedDateTime)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
