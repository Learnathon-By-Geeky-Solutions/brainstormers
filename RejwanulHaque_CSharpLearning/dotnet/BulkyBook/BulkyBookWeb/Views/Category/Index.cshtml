<style>
    .col-name {
        width: 50%;
    }

    .col-order {
        width: 30%;
    }
</style>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th class="col-name">Category Name</th>
            <th class="col-order">Display Order</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td class="col-name">
                    @obj.Name
                </td>
                <td class="col-order">
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
