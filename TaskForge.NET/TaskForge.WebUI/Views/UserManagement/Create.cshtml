@model UserCreateViewModel
@{
	ViewData["Title"] = "Create User";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
	<div class="row justify-content-center">
		<div class="col-lg-8">
			<div class="card shadow rounded-3">
				<div class="card-header bg-primary text-white py-3">
					<h4 class="p-2 mb-0">Create New User</h4>
				</div>
				<div class="card-body px-4 pb-4">
					@Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

					<form asp-action="Create" method="post" class="row g-2">
						@Html.AntiForgeryToken()

						<div class="">
							<label asp-for="FullName" class="form-label small"></label>
							<input asp-for="FullName" class="form-control form-control-sm"/>
							<span asp-validation-for="FullName" class="text-danger small"></span>
						</div>

						<div class="">
							<label asp-for="Email" class="form-label small"></label>
							<input asp-for="Email" class="form-control form-control-sm"/>
							<span asp-validation-for="Email" class="text-danger small"></span>
						</div>

						<div class="">
							<label asp-for="Password" class="form-label small"></label>
							<input asp-for="Password" class="form-control form-control-sm"/>
							<span asp-validation-for="Password" class="text-danger small"></span>
						</div>
						
						<div class="">
							<label asp-for="ConfirmPassword" class="form-label small"></label>
							<input asp-for="ConfirmPassword" type="password" class="form-control form-control-sm" />
							<span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
						</div>

						<div class="">
							<label asp-for="PhoneNumber" class="form-label small"></label>
							<input asp-for="PhoneNumber" class="form-control form-control-sm"/>
							<span asp-validation-for="PhoneNumber" class="text-danger small"></span>
						</div>

						<div class="">
							<label asp-for="Role" class="form-label small"></label>
							<select asp-for="Role" class="form-select form-select-sm" asp-items="Model.AvailableRoles">
								<option value="">Select Role</option>
							</select>
							<span asp-validation-for="Role" class="text-danger small"></span>
						</div>

						<div class="d-flex pt-2">
							<div class="col-6 col-md-3">
								<button type="submit" class="btn btn-success w-100">
									<i class="bi bi-check-circle"></i> Create
								</button>
							</div>
							<div class="col-6 col-md-3 ms-2">
								<a asp-action="Index" class="btn btn-secondary w-100">
									<i class="bi bi-x-circle"></i> Cancel
								</a>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial"/>
}