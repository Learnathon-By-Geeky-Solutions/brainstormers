<div>
	<table class="table table-bordered table-hover align-middle">
		<thead class="table-light">
		<tr>
			<th>#</th>
			<th>Full Name</th>
			<th>Email</th>
			<th>Phone</th>
			<th>Job Title</th>
			<th>Company</th>
			<th>Role(s)</th>
			<th class="text-center">Actions</th>
		</tr>
		</thead>
		<tbody>
		@if (Model.Users.Any())
		{
			var index = (Model.PageIndex - 1) * Model.PageSize + 1;
			foreach (var user in Model.Users)
			{
				<tr>
					<td>@index</td>
					<td>@user.FullName</td>
					<td>@user.Email</td>
					<td>@user.PhoneNumber</td>
					<td>@user.JobTitle</td>
					<td>@user.Company</td>
					<td>@user.Role</td>
					<td class="text-center">
						@* <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-warning">Edit</a> *@
						<a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-danger">Delete</a>
					</td>
				</tr>
				index++;
			}
		}
		else
		{
			<tr>
				<td colspan="8" class="text-center text-muted">No users found.</td>
			</tr>
		}
		</tbody>
	</table>
</div>