@{
    ViewData["Title"] = "Welcome to TaskForge";
}

<!-- Hero Section -->
<section class="bg-dark text-white text-center py-5" style="background: url('/images/background.jpg') no-repeat center center / cover;">
    <div class="container py-5">
        <h1 class="display-4 fw-bold">Welcome to TaskForge</h1>
        <p class="lead">Manage your tasks, projects, and teams all in one place.</p>
        <div class="mt-4">
            <a class="btn btn-primary me-2" asp-area="Identity" asp-page="/Account/Register">Get Started</a>
            <a class="btn btn-outline-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0">
                <h2>About TaskForge</h2>
                <p>TaskForge is a collaborative platform for managing projects, tasks, and teams efficiently. Whether you're a startup, a nonprofit, or an enterprise — we've got the tools to keep you organized.</p>
            </div>
            <div class="col-md-6 text-center">
                <img src="/images/About.png" alt="About" class="img-fluid rounded shadow" style="max-height: 350px; object-fit: contain;">
            </div>
        </div>
    </div>
</section>

<!-- Task Management Section -->
<section id="task-management" class="py-5 bg-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0 text-center">
                <img src="/images/Task Management.png" alt="Task Management" class="img-fluid rounded shadow" style="max-height: 350px; object-fit: contain;">
            </div>
            <div class="col-md-6">
                <h2>Task Management</h2>
                <p>Create, assign, and track tasks with deadlines and status updates.</p>
            </div>
        </div>
    </div>
</section>

<!-- Member Collaboration Section -->
<section id="member-collaboration" class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0">
                <h2>Member Collaboration</h2>
                <p>Invite teammates, define roles, and work together seamlessly.</p>
            </div>
            <div class="col-md-6 text-center">
                <img src="/images/Member Collaboration.png" alt="Member Collaboration" class="img-fluid rounded shadow" style="max-height: 350px; object-fit: contain;">
            </div>
        </div>
    </div>
</section>

<!-- Organization Management Section -->
<section id="organization-management" class="py-5 bg-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0 text-center">
                <img src="/images/Organization Management.png" alt="Organization Management" class="img-fluid rounded shadow" style="max-height: 350px; object-fit: contain;">
            </div>
            <div class="col-md-6">
                <h2>Organization Management</h2>
                <p>Organize your teams or departments and view performance metrics.</p>
            </div>
        </div>
    </div>
</section>
