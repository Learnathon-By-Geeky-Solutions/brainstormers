@model IEnumerable<TaskForge.Domain.Entities.Project>

@{
    ViewData["Title"] = "Projects List";
}

<h2>Projects</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New Project</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Id</td>
                <td>@project.Title</td>
                <td>@project.Description</td>
                <td>@project.Status</td>
                <td>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@project.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
